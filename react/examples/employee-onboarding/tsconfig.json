{
  "compilerOptions": {
    "target": "ES2020",
    "module": "node16",
    "moduleResolution": "node16",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "x-skills-for-ai/*": ["../../lib/dist/*"]
    }
  },
  "references": [
    { "path": "../../lib" }
  ],
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}