action StartInduction(employee_id: string) {
    requires Employee.status == NEW
    effect Employee.status = INDUCTION
    emit EmployeeInductionStarted(employee_id)
}

action ActivateEmployee(employee_id: string) {
    requires Employee.status == INDUCTION
    requires Documents.all_verified == true
    requires Training.all_completed == true
    requires Accounts.all_created == true
    effect Employee.status = ACTIVE
    emit EmployeeActivated(employee_id)
}